
@{
    ViewData["Title"] = "PayPal";
}
<style>
    .container{
        margin-top:30px;
        background-color: #003F72;
        border-radius: 25px;
        color: white;
    }
    #submit{
        margin-top: 10px;
        margin-left: auto;
        margin-bottom: 10px;
    }
    #label1{
        margin-top: 10px;       
    }
    label{
        font-size: 24px;
    }
</style>
<h1 style="text-align:center; color:wheat;"> Make a Payment through PayPal </h1> 
<div class="container" style="margin-top:30px;">
    <form action="https://www.sandbox.PayPal.com/cgi-bin/webscr" method="post">
        <div class="form-group">
            <input type="hidden" name="cmd" value="_xclick" />
        </div>
        <div class="form-group">
            <input type="hidden" name="business" value="sb-00v9s613935@business.example.com" />
        </div>
        <div class="form-group">
            <label id="label1"class="control-label"> Description of Payment</label>
            <input name="description" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label"> Amount (US Dollars) </label>
            <input name="amount" class="form-control" />
        </div>
        <div class="form-group">
            <input id="submit" type="submit" value="Submit Payment" class="btn btn-primary" />
        </div>
    </form>
</div>

